        <MudPaper>
            <MudForm>
                    <h1 style="text-align:center">Hangman</h1>
                    <img style="padding: 25px; display: block; margin-left: auto; margin-right: auto; width: 50%;" src="@imageSource" />
                    <MudTextField style="display: block; margin-left: auto; margin-right: auto;" T="string" Label="Guess a letter" Required="true" RequiredError="Letter is required!"/>
            </MudForm>   
        </MudPaper>
        <MudPaper>
            <MudButton Variant="Variant.Filled" style="padding:15px; display: block; margin-left: auto; margin-right: auto;" Color="Color.Primary" DisableElevation="true" OnClick="IncrementGuess">Submit!</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

